@model Equipment

<h2>Edit Equipment</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="EquipmentId" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Material"></label>
        <input asp-for="Material" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Type"></label>
        <input asp-for="Type" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Availability"></label>
        <input asp-for="Availability" type="checkbox" />
    </div>
    <div class="form-group">
        <label asp-for="Cost"></label>
        <input asp-for="Cost" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-warning">Save Changes</button>
</form>
