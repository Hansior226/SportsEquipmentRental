@model IEnumerable<Equipment>

<h2>Equipment List</h2>
<a asp-action="Create" class="btn btn-primary">Add New Equipment</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Material</th>
            <th>Type</th>
            <th>Availability</th>
            <th>Cost</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Material</td>
                <td>@item.Type</td>
                <td>@(item.Availability ? "Available" : "Not Available")</td>
                <td>@item.Cost</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EquipmentId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.EquipmentId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
