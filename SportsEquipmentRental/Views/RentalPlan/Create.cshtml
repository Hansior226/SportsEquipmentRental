@model RentalPlan

<h2>Create Rental Plan</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="CustomerId">Customer</label>
        <select asp-for="CustomerId" asp-items="ViewBag.Customers" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="EquipmentId">Equipment</label>
        <select asp-for="EquipmentId" asp-items="ViewBag.Equipments" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="RentalDate"></label>
        <input asp-for="RentalDate" type="date" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Create</button>
</form>
