@model RentalPlan

<h2>Delete Rental Plan</h2>
<p>Are you sure you want to delete this rental plan?</p>

<div>
    <h4>Rental Plan Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@Model.Customer.FirstName @Model.Customer.LastName</dd>

        <dt class="col-sm-2">Equipment</dt>
        <dd class="col-sm-10">@Model.Equipment.Name</dd>

        <dt class="col-sm-2">Rental Date</dt>
        <dd class="col-sm-10">@Model.RentalDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Return Date</dt>
        <dd class="col-sm-10">@(Model.ReturnDate?.ToShortDateString() ?? "Not Returned")</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="RentalId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>